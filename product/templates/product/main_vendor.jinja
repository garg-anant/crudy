{% extends './vendor_base.jinja' %}

{% block vendor %}
<div class="container">
<h2 id='abc'>Vendor Page</h2><br>
<!--<a href="{% url 'product:logout' %}"><u>Log out</u></a><br>-->
<h4 id='name'>Welcome, {{ username }}</h4><br>
